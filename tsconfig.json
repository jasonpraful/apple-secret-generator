{
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "dist", "./src/**/*.test.ts"],
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./bin/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
